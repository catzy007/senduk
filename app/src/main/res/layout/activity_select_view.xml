<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    tools:context=".SelectView">

    <TextView
        android:id="@+id/SelViiew1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:text="Lihat Data Sensus"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SelView2"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/provinsi"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/SpinView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SelViiew3"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/kota"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/SpinView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SelViiew4"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/kecamatan"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/SpinView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SelViiew5"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/kelurahan"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/SpinView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/SubmitView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/MyRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>